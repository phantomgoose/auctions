@model Auctions.ViewModels.LoginViewModel

<h3>Login</h3>
<form asp-controller="Home" asp-action="Login" method="post">
    <span asp-validation-for="LoginUsername"></span>
    <label asp-for="LoginUsername">Username:</label>
    <input asp-for="LoginUsername">
    <br>
    <span asp-validation-for="LoginPassword"></span>
    <label asp-for="LoginPassword">Password:</label>
    <input asp-for="LoginPassword" type="password">
    <br>
    <input type="submit" value="Login">
</form>